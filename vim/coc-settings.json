{
  // python
  "python.jediEnabled": false,
  "python.formatting.blackPath": "~/.asdf/shims/black",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "~/.asdf/shims/mypy",
  "python.linting.pylintArgs": ["--rcfile ~/.pylintrc"],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "~/.asdf/shims/pylint",
  "python.linting.banditEnabled": true,
  "python.linting.banditPath": "~/.asdf/shims/bandit",
  "python.sortImports.path": "isort",
  // elixir
  "elixir.pathToElixirLS": "~/projects/github/elixir-ls/release/language_server.sh",
  "elixirLS.suggestSpecs": true,
  "elixirLS.mixEnv": "dev",
  // xml
  "xml.java.home": "/Library/Java/JavaVirtualMachines/openjdk-13.0.2.jdk/Contents/Home",
  // misc
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "Markdown",
    "elixir",
    "python",
    "javascript",
    "rust",
    "shell",
    "dockerfile"
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}
